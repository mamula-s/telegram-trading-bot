<!-- views/admin/login.ejs -->
<!DOCTYPE html>
<html>
<head>
  <title>Admin Login</title>
  <link rel="stylesheet" href="/css/admin.css">
</head>
<body class="bg-gray-100">
  <div class="min-h-screen flex items-center justify-center">
    <div class="max-w-md w-full space-y-8 bg-white p-8 rounded-xl shadow">
      <div>
        <h2 class="text-center text-3xl font-bold">Trading Bot Admin</h2>
      </div>

      <% if (error) { %>
        <div class="bg-red-100 p-4 rounded text-red-700">
          <%= error %>
        </div>
      <% } %>

      <form class="mt-8 space-y-6" action="/admin/login" method="POST">
        <div>
          <label>Username or Email</label>
          <input type="text" name="username" required class="input">
        </div>

        <div>
          <label>Password</label>
          <input type="password" name="password" required class="input">
        </div>

        <div>
          <button type="submit" class="btn-primary w-full">
            Sign in
          </button>
        </div>

        <div class="text-center">
          <a href="/admin/forgot-password" class="text-blue-600 hover:text-blue-800">
            Forgot password?
          </a>
        </div>
      </form>
    </div>
  </div>
</body>
</html>