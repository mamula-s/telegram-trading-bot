<!-- layout.ejs -->
<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trading Bot Admin - <%= title %></title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.7.0/chart.min.js"></script>
</head>
<body class="bg-gray-100">
    <div class="min-h-screen flex">
        <!-- Sidebar -->
        <nav class="bg-gray-800 w-64 min-h-screen flex-shrink-0">
            <div class="flex items-center justify-center h-16 bg-gray-900">
                <span class="text-white text-xl font-semibold">Trading Bot Admin</span>
            </div>
            <div class="py-4">
                <a href="/admin/dashboard" class="block px-4 py-2 text-gray-300 hover:bg-gray-700">
                    <i class="fas fa-chart-line mr-2"></i> Dashboard
                </a>
                <a href="/admin/users" class="block px-4 py-2 text-gray-300 hover:bg-gray-700">
                    <i class="fas fa-users mr-2"></i> Користувачі
                </a>
                <a href="/admin/spot-signals" class="block px-4 py-2 text-gray-300 hover:bg-gray-700">
                    <i class="fas fa-signal mr-2"></i> Spot Сигнали
                </a>
                <a href="/admin/futures-signals" class="block px-4 py-2 text-gray-300 hover:bg-gray-700">
                    <i class="fas fa-chart-bar mr-2"></i> Futures Сигнали
                </a>
                <a href="/admin/educational-materials" class="block px-4 py-2 text-gray-300 hover:bg-gray-700">
                    <i class="fas fa-book mr-2"></i> Освітні матеріали
                </a>
                <a href="/admin/referral-system" class="block px-4 py-2 text-gray-300 hover:bg-gray-700">
                    <i class="fas fa-link mr-2"></i> Реферальна система
                </a>
                <a href="/admin/reviews" class="block px-4 py-2 text-gray-300 hover:bg-gray-700">
                    <i class="fas fa-star mr-2"></i> Відгуки
                </a>
            </div>
        </nav>

        <!-- Main Content -->
        <div class="flex-1">
            <!-- Top Navigation -->
            <header class="bg-white shadow">
                <div class="flex items-center justify-between h-16 px-4">
                    <div class="flex items-center">
                        <span class="text-xl font-semibold text-gray-800"><%= title %></span>
                    </div>
                    <div class="flex items-center">
                        <button class="px-3 py-1 bg-gray-800 text-white rounded hover:bg-gray-700">
                            <i class="fas fa-sign-out-alt mr-1"></i> Вийти
                        </button>
                    </div>
                </div>
            </header>

            <!-- Page Content -->
            <main class="p-6">
                <%- body %>
            </main>
        </div>
    </div>

    <script>
        // Base JavaScript for admin panel
        document.addEventListener('DOMContentLoaded', function() {
            // Highlight current page in sidebar
            const currentPath = window.location.pathname;
            document.querySelectorAll('nav a').forEach(link => {
                if (link.getAttribute('href') === currentPath) {
                    link.classList.add('bg-gray-700');
                }
            });
        });
    </script>
</body>
</html>